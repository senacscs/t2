body {
	font-family: "Arial", sans-serif;
	line-height: 1.6;
}
ul.nav {
	list-style-type: none;
}
ul.nav li {
	display: inline-block;
	margin-right: 15px;
}
header {
	text-align: center;
	padding: 20px;
}
h1#titulo-principal {
	font-size: 2em;
}
p#introducao {
	font-size: 1.2em;
}
nav {
	margin-top: 10px;
}
.nav a {
	text-decoration: none;
	color: #fff;
	font-weight: bold;
	font-size: 1.1em;
}
a:hover {
	text-decoration: underline;
}
main {
	padding: 20px;
}
iframe {
	width: 100%;
}
section {
	display: flex;
	margin: 0 auto;
}